<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorfondo"
    android:weightSum="1">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/fondo"
        android:id="@+id/imageView"
        android:layout_marginTop="34dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="29dp"
        android:layout_height="30dp"
        android:src="@drawable/user"
        android:baselineAlignBottom="false"
        android:id="@+id/imageViewUser"
        android:layout_alignTop="@+id/txtUsuario"
        android:layout_toLeftOf="@+id/txtUsuario"
        android:layout_above="@+id/imageViewPass" />

    <ImageView
        android:layout_width="29dp"
        android:layout_height="30dp"
        android:src="@drawable/pass"
        android:baselineAlignBottom="false"
        android:id="@+id/imageViewPass"
        android:layout_alignTop="@+id/txtPass"
        android:layout_alignBottom="@+id/txtPass"
        android:layout_alignLeft="@+id/imageViewUser"
        android:layout_alignStart="@+id/imageViewUser" />

    <EditText

        android:layout_width="166dp"
        android:layout_height="wrap_content"
        android:hint=" Usuario"
        android:layout_gravity="center_horizontal"
        android:id="@+id/txtUsuario"
        android:layout_below="@+id/imageView"
        android:layout_alignLeft="@+id/txtPass"
        android:layout_alignStart="@+id/txtPass" />


    <EditText
        android:layout_width="166dp"
        android:layout_height="wrap_content"
        android:hint="ContraseÃ±a"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_gravity="center_horizontal"
        android:id="@+id/txtPass"
        android:layout_below="@+id/txtUsuario"
        android:layout_alignRight="@+id/btnIngresar"
        android:layout_alignEnd="@+id/btnIngresar"
        android:password="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text=" Ingresar "
        android:textColor="@color/colorfondo"
        android:background="@color/colorPrimary"
        android:layout_gravity="center"
        android:id="@+id/btnIngresar"
        android:layout_below="@+id/txtPass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrate"
        android:id="@+id/btnRegistrar"
        android:background="@color/colorfondo"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/btnIngresar"
        android:layout_alignLeft="@+id/btnIngresar"
        android:layout_alignStart="@+id/btnIngresar"
        android:layout_alignRight="@+id/btnIngresar"
        android:layout_alignEnd="@+id/btnIngresar" />


</RelativeLayout>
